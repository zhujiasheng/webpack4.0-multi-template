{
  "compilerOptions": {
    // "removeComments":true,//去除注释
    "rootDir": "./src", //'.'
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": ".",
    "module": "esnext",
    "target": "es5",
    "lib": ["es2015", "es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true, //any（任意值），你也要进行类型注释
    "importHelpers": true,
    "strictNullChecks": true, //不强制检查 NULL 类型
    // "strict": false, //按照TypeScript最严格的规范
    // "suppressImplicitAnyIndexErrors": true,
    // https://github.com/Microsoft/TypeScript/issues/28762#issuecomment-443406607
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": tr, "typescripts"ue
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "*.js"
  ]
}
